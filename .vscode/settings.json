{
  "files.autoSave": "afterDelay",
  "files.associations": {
    "iostream": "cpp"
  },
  "C_Cpp.errorSquiggles": "disabled",

  // Visual e funcionalidades gerais
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "editor.rulers": [80, 120],
  "workbench.startupEditor": "none",
  "editor.renderLineHighlight": "gutter",
  "workbench.editor.labelFormat": "short",
  "explorer.compactFolders": false,
  "editor.semanticHighlighting.enabled": false,
  "breadcrumbs.enabled": false,
  
  // Efeitos maiores

  // Ctrl+Q acessa a sidebar
  "workbench.activityBar.location": "hidden", 
  "editor.minimap.enabled": false,

  // Esconde ou não a scrollbar
  "editor.scrollbar.horizontal": "auto",
  "editor.scrollbar.vertical": "auto",
  
  // Mudanças visuais utilizando a extensão apc
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
  },
  "apc.header": {
    "height": 36
  },
  "apc.font.family": "Inter",

  "apc.stylesheet": {
    ".title-label > h2": "display: none",
    ".nosidebar .inline-tabs-placeholder": "width: 75px",
    ".pane-header": "padding: 0 8px",
    ".pane-body": "padding: 8px",
    ".split-view-view:first-child .pane-header": "display: none !important;",
    ".monaco-list-row": "border-radius: 4px;",
    ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "display: none;"
  },

  // Aumenta o espaçamento entre uma pasta e outro do explorer
  "apc.listRow": {
    "height": 24
  },

  // Unir arquivos dependentes em subpasta do arquivo pai
  "explorer.fileNesting.enabled": true,
  
  // Fontsize e fonte do terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "",
}
